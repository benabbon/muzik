@import 'nib'

eighth = 12.5%
key_height = 50%

wet_asphalt = #2c3e50
midnight_blue = #34495e
concrete = #95a5a6
asbestos = #7f8c8d

bounce_duration = 0.2s

html, body
  height: 100%
  overflow: hidden

*
  box-sizing(border-box)
  -webkit-touch-callout: none
  user-select: none
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

.left
  float left

.right
  float right

body
  font-family Helvetica, sans-serif
  margin 0

.menu
  height: 80px
  padding: 10px
  width: 100%
  background: concrete
  position: fixed
  z-index: 100

.item
  background: asbestos
  float: left
  margin-right: 20px
  padding: 10px
  font-size: 20px
  cursor: pointer
  margin-top: 6px

.main
  height: calc(100% - 80px)
  position: absolute
  width: 100%
  top: 80px

.keyboard
  height: 100%
  width: 100%
  position: relative
  float: left

.drums
  height: 100%
  width: 100%
  position: relative
  background: midnight_blue
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between
  float: left

.drum
  width: 25%
  height: 25%
  margin-left: 12.5%
  margin-right: 12.5%
  transition: all 0.2s ease
  cursor: pointer

.active.button
  height: 75% !important

.active.drum
  transform: scale(1.2) !important

.column
  height: 100%
  width: eighth
  float: left
  position: relative
  background: wet_asphalt

.column:nth-child(even)
  background: midnight_blue

.button
  width: 100%
  height: key_height
  position: absolute
  bottom: 0
  left: 0
  transition: all 0.2s ease
  cursor: pointer

.selectors
  position: absolute
  top: 0
  left: 0
  z-index: 100

.selector
  font-size: 30px
  margin: 10px 10px 0 0
  font-weight: bold
  color: white
  margin: 30px 20px 0 0
  position: relative
  cursor: pointer
  float: left

@media (min-width: 1000px)
  .selector
    font-size: 100px
    margin: 30px 20px 0 0
