@import 'nib'

seventh = 14.2857143%

html, body
  height: 100%

*
  box-sizing(border-box)
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  -webkit-tap-highlight-color: rgba(0,0,0,0)

.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

.left
  float left

.right
  float right

body
  font-family Helvetica, sans-serif
  margin 0

.buttons
  height: 100%
  width: 100%
  cursor: pointer

.column
  height: 100%
  width: seventh
  float: left
  position: relative
  background: #2c3e50

.column:nth-child(even)
  background: #34495e

.button
  width: 100%
  height: 70%
  position: absolute
  bottom: 0
  left: 0
  transition: all 0.2s

.overlay
  height: 100%
  width: 100%
  color: white
  opacity: 0.2
  display: none
  z-index: 100
  position: absolute
  top: 0
  left: 0
