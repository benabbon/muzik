@import 'nib'

html, body
  height: 100%

*
  box-sizing(border-box)

.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

.left
  float left

.right
  float right

body
  font-family Helvetica, sans-serif
  margin 0

.buttons
  height: 100%
  width: 100%
  cursor: pointer

.column
  height: 100%
  width: 14.2%
  float: left
  position: relative
  background: #2c3e50

.column:nth-child(even)
  background: #34495e

  .button
    height: 750px

  .button:hover
    height: 850px

.button
  width: 100%
  height: 700px
  background: red
  position: absolute
  bottom: 0
  left: 0
  transition: all 0.2s

.button:hover
  height: 800px

.overlay
  height: 100%
  width: 100%
  color: white
  opacity: 0.2
  display: none
  z-index: 100
  position: absolute
  top: 0
  left: 0
